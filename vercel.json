{
  "version": 2,
  "static": {
    "directory": "static",
    "include": ["**/*.css", "**/*.js", "**/*.png", "**/*.html"]
  },
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}